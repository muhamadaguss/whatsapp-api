# Database Configuration
DB_NAME=whatsapp_blast
DB_USER=postgres
DB_PASS=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_64_characters_long
JWT_EXPIRES_IN=12h

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,https://yourdomain.com

# Security Configuration
API_KEYS=optional_api_key_1,optional_api_key_2
SESSION_SECRET=your_session_secret_key_different_from_jwt_secret

# Optional: File Upload Configuration
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads

# Optional: Session Configuration
# SESSION_TIMEOUT=43200000

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW=900000
# RATE_LIMIT_MAX=100

# Security Headers (for production)
# HELMET_ENABLED=true
# TRUST_PROXY=false

# File Cleanup Configuration
CLEANUP_DRY_RUN=false
CLEANUP_TEMP_MAX_AGE=86400000
CLEANUP_LOG_MAX_AGE=604800000
CLEANUP_SESSION_MAX_AGE=2592000000
CLEANUP_INTERVAL=3600000
CLEANUP_MAX_FILES=100