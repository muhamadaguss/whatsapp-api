# Production Environment Configuration for WhatsApp Blast API

# Database Configuration
DB_NAME=whatsapp_blast
DB_USER=postgres
DB_PASS=your_secure_password_here
DB_HOST=postgres  # Use service name in Docker Compose
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Configuration - Add your production domains
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,https://api.your-domain.com

# File Cleanup Configuration
CLEANUP_DRY_RUN=false
CLEANUP_TEMP_MAX_AGE=86400000      # 24 hours in milliseconds
CLEANUP_LOG_MAX_AGE=604800000      # 7 days in milliseconds
CLEANUP_SESSION_MAX_AGE=2592000000 # 30 days in milliseconds
CLEANUP_INTERVAL=3600000           # 1 hour in milliseconds
CLEANUP_MAX_FILES=100

# Production Optimizations
# Uncomment and configure as needed

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000      # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100      # Max requests per window

# Security Headers
# SECURITY_HSTS_MAX_AGE=31536000   # 1 year
# SECURITY_CONTENT_POLICY=default-src 'self'

# Logging
# LOG_LEVEL=info
# LOG_FILE_PATH=/app/logs/app.log

# Health Check
# HEALTH_CHECK_TIMEOUT=5000        # 5 seconds

# Docker Registry (for deployment)
DOCKER_REGISTRY=ghcr.io
TAG=latest